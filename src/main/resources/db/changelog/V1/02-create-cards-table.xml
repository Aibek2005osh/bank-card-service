<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="02-create-cards" author="aibek">
        <preConditions onFail="MARK_RAN" onError="HALT">
            <not>
                <tableExists tableName="cards"/>
            </not>
        </preConditions>

        <createTable tableName="cards">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="encrypted_card_number" type="VARCHAR(500)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="masked_card_number" type="VARCHAR(19)">
                <constraints nullable="false"/>
            </column>

            <column name="owner_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="expiry_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="balance" type="NUMERIC(15,2)" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>

            <column name="encrypted_cvv" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP"/>
            <column name="blocked_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="cards"
                baseColumnNames="owner_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_cards_owner"/>

        <createIndex indexName="idx_cards_owner_id" tableName="cards">
            <column name="owner_id"/>
        </createIndex>

        <createIndex indexName="idx_cards_status" tableName="cards">
            <column name="status"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
